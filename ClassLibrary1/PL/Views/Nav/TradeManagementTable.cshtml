
@Styles.Render("~/Content/DataTables")

<div class="tablecontainer">
    <div style="margin: 10px;">
        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle myNavBtn" data-toggle="dropdown">
                Add Position <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
                <li><a class="popup" href="/Position/Save/0">Add regular position </a></li>
            </ul>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle myNavBtn" data-toggle="dropdown">
                View <span class="caret"></span>
            </button>
            @Html.Action("ViewList", "Nav")
        </div>
    </div>

    <div style="background-color: #f5f5f5; padding: 20px">
        <table>
            <tbody>
            <tr>
                <td>Symbol: </td>
                <td class="td-item"><input type="text" id="txtSymbolName"/></td>
                <td class="td-item td-item-text">Open date:</td>
                <td>
                    <div style="margin-bottom: -15px; width: 150px; margin-left: 15px;">
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker6'>
                                <input type='text' class="form-control" id="open-date-from" style="padding-right: 25px"/>
                                <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                            </div>
                        </div>
                    </div>
                </td>
                <td class="td-item">To:</td>
                <td>
                    <div style="margin-bottom: -15px; width: 150px; margin-left: 15px;">
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker7'>
                                <input type='text' class="form-control" id="open-date-to" style="padding-right: 25px"/>
                                <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                            </div>
                        </div>
                    </div>
                </td>
                <td class="td-item td-item-text">Close date:</td>
                <td>
                    <div style="margin-bottom: -15px; width: 150px; margin-left: 15px;">
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker8'>
                                <input type='text' class="form-control" id="close-date-from" style="padding-right: 25px"/>
                                <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                            </div>
                        </div>
                    </div>
                </td>
                <td class="td-item">To:</td>
                <td>
                    <div style="margin-bottom: -15px; width: 150px; margin-left: 15px;">
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker9'>
                                <input type='text' class="form-control" id="close-date-to" style="padding-right: 25px"/>
                                <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                            </div>
                        </div>
                    </div>
                </td>

                <td class="td-item td-item-text">Position Status:</td>
                <td style="padding-left: 10px;">
                    <select id="ddStatus" class="selectpicker">
                        <option value="All">All</option>
                        <option value="Open">Open Only</option>
                        <option value="Close">Close Only</option>
                        <option value="Wait">Open and Wait</option>
                    </select>
                </td>
                <td style="padding-left: 10px;">
                    <input type="button" value="Search" id="btnSearch"/>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <div id="tableDiv">
        <table id="trade-management-jq-table" class="display" cellspacing="0" width="100%"><tbody></tbody></table>
    </div>
</div>